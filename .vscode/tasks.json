{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version":"2.0.0", 
    "owner": "cpp",
    "tasks":[
         {
            "label": "Compile 4dm to 4do custom batch file (12d model macro)",
            "type":"process",
            "options": {
                "cwd": "${fileDirname}",
            },
            "command": "${workspaceFolder}/build/Make_4do_From_4dm.bat", // using a batch file to build and do some copying of the built 4do to /bin/ along with some info at time of compile
            "args": [
                "${file}"
            ],
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": "autoDetect",
                "severity": "error",
                "pattern": {
                    "regexp": "^\"(.*?)\",(.*?)line (.*?)\\.(.*?)\\: (.*?)\\: (.*)",
                    "file": 1,
                    "line": 3,
                    "column": 4,
                    "code": 5,
                    "message": 6
                }
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "panel": "dedicated",
                "focus": true,
                "clear": true
            }
        },
        {
            "label": "Build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile 4dm to 4do custom batch file (12d model macro)" // only need this one using the batch file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Create a new prototypes file (12d model macro)",
            "type":"shell",
            "options": {
                "cwd": "${fileDirname}",
            },
            "command": "C:/Program Files/12d/12dmodel/15.00/nt.x64/cc4d.exe",
            "args": [
                "-list",
                "${workspaceFolder}/prototypesv15.4dm" // this creates a XML also, cant seem to help it :(
            ],
        },
        {
            "label": "Create 4dm prototypes",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Create a new prototypes file (12d model macro)" // only need this one using the batch file
            ],
            "group": {
                "kind":"none" ,
                "isDefault": false,

            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
    }